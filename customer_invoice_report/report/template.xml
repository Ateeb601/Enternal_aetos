<odoo>
    <data>
        <template id="customer_invoice_report.customer_invoice_report">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="customer_invoice_report.customer_invoice_report_customized_header"/>
                    <t t-call="customer_invoice_report.customer_invoice_report_customized_footer"/>
                    <t t-call="web.basic_layout">
                        <!--                        Code for Page-1-->
                        <div id="page_1" class="page">
                            <t t-if="o.move_type == 'out_invoice'">
                                <div class="row text-center" style="color:#40a4d5;">
                                    <div class="col-4"/>
                                    <div class="col-4" style="margin-top:150px;">
                                        <h3 class="text-capitalize">
                                            <strong>customer invoice</strong>
                                        </h3>
                                    </div>
                                    <div class="col-2"/>
                                    <div class="col-2 text-center">
                                    </div>
                                </div>
                                <br/>
                                <br/>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="row text-left" style="color:#40a4d5;">
                                            <h5 class="text-capitalize">
                                                <strong>customer details:</strong>
                                            </h5>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" style="margin-top:-5px;">
                                    <div class="col-12">
                                        <div class="row">
                                            <div class="col-6">
                                                <div class="row">
                                                    <h5>
                                                        <b>
                                                            <span t-esc="o.partner_id.name"/>
                                                        </b>
                                                    </h5>
                                                </div>
                                                <div class="row" style="margin-top:-5px;">
                                                    <div class="col-8">
                                                        <h7>
                                                            <span t-esc="o.partner_id.street"/>
                                                            <br/>
                                                            <t t-if="o.partner_id.street2">
                                                                <span t-esc="o.partner_id.street2"/>
                                                                <br/>
                                                            </t>
                                                            <span t-esc="o.partner_id.state_id.name"/>
                                                            <span t-esc="o.partner_id.zip"/>
                                                            <br/>
                                                            <span t-esc="o.partner_id.city"/>
                                                            <span t-esc="o.partner_id.country_id.name"/>
                                                        </h7>
                                                    </div>
                                                    <div class="col-4"/>
                                                </div>
                                            </div>
                                            <div class="col-6">
                                                <div class="row" style="margin-left:35px;">
                                                    <div class="col-2"/>
                                                    <div class="col-4">
                                                        <h5>
                                                            <b>
                                                                <span>Invoice No:</span>
                                                            </b>
                                                        </h5>
                                                    </div>
                                                    <div class="col-6">
                                                        <h5>
                                                            <b>
                                                                <span t-esc="o.name"/>
                                                            </b>
                                                        </h5>
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-top:10px;margin-left:35px;">
                                                    <div class="col-2"/>
                                                    <div class="col-5">
                                                        <h7>
                                                            <span>
                                                                <b>Invoice Date:</b>
                                                            </span>
                                                        </h7>
                                                    </div>
                                                    <div class="col-5" style="margin-left:-33px;">
                                                        <h7>
                                                            <span t-field="o.invoice_date"
                                                                  t-options='{"format": "dd/MM/yyyy"}'/>
                                                        </h7>
                                                    </div>
                                                </div>
                                                <div class="row" style="margin-left:35px;">
                                                    <div class="col-2"/>
                                                    <div class="col-4">
                                                        <h7>
                                                            <span>
                                                                <b>Due Date:</b>
                                                            </span>
                                                        </h7>
                                                    </div>
                                                    <div class="col-6" style="margin-left:1px;">
                                                        <h7>
                                                            <span t-field="o.invoice_date_due"
                                                                  t-options='{"format": "dd/MM/yyyy"}'/>
                                                        </h7>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <br/>
                                <br/>
                                <!-- First Table - White borders -->
                                <table class="table table-sm"
                                       style="margin-top:-30px;font-family:'Roboto',sans-serif;font-size:15px;border:1px solid #DCDCDC !important;">
                                    <thead>
                                        <tr class="text-center align-middle"
                                            style="color:#ffffff;background-color:#40a4d5;white-space: nowrap;">
                                            <th class="text-center"
                                                style="color:#FFFFFF;border:1px solid #ffffff !important;">
                                                <strong>Aetos Contact</strong>
                                            </th>
                                            <th class="text-center"
                                                style="color:#FFFFFF;border:1px solid #ffffff !important;">
                                                <strong>Customer Order No.</strong>
                                            </th>
                                            <th class="text-center"
                                                style="color:#FFFFFF;border:1px solid #ffffff !important;">
                                                <strong>Customer GST No.</strong>
                                            </th>
                                            <th class="text-center"
                                                style="color:#FFFFFF;border:1px solid #ffffff !important;">
                                                <strong>Customer VAT No.</strong>
                                            </th>
                                            <th class="text-center"
                                                style="color:#FFFFFF;border:1px solid #ffffff !important;">
                                                <strong>Due Date</strong>
                                            </th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr style="border-top:2px solid black;">
                                            <td class="text-center" style="border:1px solid #DCDCDC !important;">
                                                <strong>
                                                    <t t-esc="o.invoice_user_id.name"/>
                                                </strong>
                                            </td>
                                            <td class="text-center" style="border:1px solid #DCDCDC !important;">
                                                <strong></strong>
                                            </td>
                                            <td class="text-center" style="border:1px solid #DCDCDC !important;">
                                                <strong></strong>
                                            </td>
                                            <td class="text-center" style="border:1px solid #DCDCDC !important;">
                                                <strong></strong>
                                            </td>
                                            <td class="text-center" style="border:1px solid #DCDCDC !important;">
                                                <strong>
                                                    <span t-field="o.invoice_date_due"
                                                          t-options='{"format": "dd/MM/yyyy"}'/>
                                                </strong>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>


                                <br/>

                                <!-- Second Table -->
                                <table class="table table-sm"
                                       style="font-family:'Roboto',sans-serif;font-size:15px;border:1px solid #DCDCDC !important;">
                                    <t t-set="grand_price_subtotal" t-value="0.0"/>
                                    <t t-set="grand_price_tax_total" t-value="0.0"/>
                                    <t t-set="grand_price_total" t-value="0.0"/>

                                    <thead>
                                        <tr class="text-center align-middle"
                                            style="color:#ffffff;background-color:#40a4d5;white-space: nowrap;">
                                            <th class="text-center"
                                                style="color:#FFFFFF;border:1px solid #DCDCDC !important;">
                                                <strong>Product</strong>
                                            </th>
                                            <th colspan="4" width="200px;" class="text-center"
                                                style="color:#FFFFFF;border:1px solid #DCDCDC !important;">
                                                <strong>Description</strong>
                                            </th>
                                            <th class="text-center"
                                                style="color:#FFFFFF;border:1px solid #DCDCDC !important;">
                                                <strong>Quantity</strong>
                                            </th>
                                            <th class="text-center"
                                                style="color:#FFFFFF;border:1px solid #DCDCDC !important;">
                                                <strong>Unit Price</strong>
                                            </th>
                                            <th class="text-center"
                                                style="color:#FFFFFF;border:1px solid #DCDCDC !important;">
                                                <strong>Tax Amount</strong>
                                            </th>
                                            <th class="text-center"
                                                style="color:#FFFFFF;border:1px solid #DCDCDC !important;">
                                                <strong>Amount</strong>
                                            </th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        <t t-foreach="o.invoice_line_ids" t-as="line">
                                            <tr style="border-top:2px solid black;">
                                                <td class="text-left" style="border:1px solid #DCDCDC !important;">
                                                    <strong>
                                                        <span t-esc="line.product_id.name or line.name"/>
                                                    </strong>
                                                </td>
                                                <td colspan="4" width="200px;" class="text-center"
                                                    style="border:1px solid #DCDCDC !important;">
                                                    <strong>
                                                        <span t-esc="line.name"/>
                                                    </strong>
                                                </td>
                                                <td class="text-center" style="border:1px solid #DCDCDC !important;">
                                                    <strong>
                                                        <span t-esc="int(line.quantity)"/>
                                                    </strong>
                                                </td>
                                                <td style="text-align:right;border:1px solid #DCDCDC !important;">
                                                    <strong>
                                                        <span t-esc="line.price_unit"
                                                              t-options="{'widget': 'float', 'precision': 2}"/>
                                                    </strong>
                                                    <t t-set="price_unit" t-value="line.price_unit"/>
                                                </td>
                                                <td style="text-align:right;border:1px solid #DCDCDC !important;">
                                                    <strong>
                                                        <span t-esc="line.tax_ids.name"/>
                                                    </strong>
                                                </td>
                                                <td style="text-align:right;border:1px solid #DCDCDC !important;">
                                                    <strong>
                                                        <span t-esc="line.price_total"
                                                              t-options="{'widget': 'float', 'precision': 2}"/>
                                                    </strong>
                                                    <t t-set="grand_price_total"
                                                       t-value="(grand_price_total or 0.0) + (line.price_total or 0.0)"/>
                                                </td>
                                            </tr>
                                        </t>
                                    </tbody>
                                </table>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="row">
                                            <div class="col-3">
                                                <b>Amount in Words:</b>
                                            </div>
                                            <div class="col-6" style="margin-left:-80px;margin-top:0px;">
                                                <span t-esc="o.currency_id.amount_to_text(grand_price_total)"/>
                                                only.
                                            </div>
                                            <div class="col-3"/>
                                        </div>
                                    </div>
                                </div>
                                <br/>
                                <div class="row">
                                    <div class="col-12">
                                        <div class="row">
                                            <div class="col-4"/>
                                            <div class="col-5"/>
                                            <div class="col-3" style="margin-left:15px;">
                                                <!-- Initialize the total subtotals and total taxes -->
                                                <t t-set="total_subtotal" t-value="0"/>
                                                <t t-set="total_tax" t-value="0"/>
                                                <t t-set="grand_price_total" t-value="0"/>
                                                <t t-foreach="o.invoice_line_ids" t-as="line">
                                                    <t t-set="total_subtotal"
                                                       t-value="total_subtotal + line.price_subtotal"/>
                                                    <t t-set="total_tax"
                                                       t-value="total_tax + (line.price_total - line.price_subtotal)"/>
                                                </t>
                                                <div class="row">
                                                    <div class="col-4" style="text-align:left;">
                                                        <span>
                                                            <b>Subtotal</b>
                                                        </span>
                                                    </div>
                                                    <div class="col-8" style="text-align:right;margin-left:-20px;">
                                                        <span t-esc="total_subtotal"
                                                              t-options="{'widget': 'float', 'precision': 2}"/>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-11">
                                                        <hr style="height:1px;border-width:0;color:#000000;background-color:#000000;"/>
                                                    </div>
                                                    <div class="col-1"/>
                                                </div>
                                                <div class="row">
                                                    <div class="col-4" style="text-align:left;">
                                                        <span>
                                                            <b>Tax</b>
                                                        </span>
                                                    </div>
                                                    <div class="col-8" style="text-align:right;margin-left:-20px;">
                                                        <span t-esc="total_tax"
                                                              t-options="{'widget': 'float', 'precision': 2}"/>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-11">
                                                        <hr style="height:1px;border-width:0;color:#000000;background-color:#000000;"/>
                                                    </div>
                                                    <div class="col-1"/>
                                                </div>
                                                <div class="row">
                                                    <div class="col-4" style="text-align:left;">
                                                        <span>
                                                            <b>Total</b>
                                                        </span>
                                                    </div>
                                                    <div class="col-8" style="text-align:right;margin-left:-20px;">
                                                        <span t-esc="total_subtotal + total_tax"
                                                              t-options="{'widget': 'float', 'precision': 2}"/>
                                                        <t t-set="grand_price_total"
                                                           t-value="grand_price_tax_total + (total_subtotal + total_tax)"/>
                                                    </div>
                                                </div>
                                                <div class="row">
                                                    <div class="col-11">
                                                        <hr style="height:1px;border-width:0;color:#000000;background-color:#000000;"/>
                                                    </div>
                                                    <div class="col-1"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <div class="row" style="font-family:'Roboto',sans-serif;font-size:15px;color:#40a4d5;">
                                    <div class="col-4 text-center" style="text-decoration:overline">Prepared By</div>
                                    <div class="col-4 text-center" style="text-decoration:overline">Checked By</div>
                                    <div class="col-4 text-center" style="text-decoration:overline">Approved By</div>
                                </div>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <br/>
                                <div class="row">
                                    <div class="col-4">
                                        <h6>
                                            <b>Bank Account Details:</b>
                                        </h6>
                                    </div>
                                </div>
                                <!-- Bank Details Table - White borders -->
                                <table class="table table-sm"
                                       style="font-family:'Roboto',sans-serif;font-size:14px;margin-top:10px;border:1px solid #ffffff !important;">
                                    <tr style="border-top:2px solid black;">
                                        <td style="color:#ffffff;background-color:#40a4d5;width:20%;border:1px solid #DCDCDC !important;">
                                            <strong>Bank
                                                Name
                                            </strong>
                                        </td>
                                        <td style="background-color:white;width:80%;border:1px solid #DCDCDC !important;">
                                            <strong>Allied Bank Limited</strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#ffffff;background-color:#40a4d5;border:1px solid #DCDCDC !important;">
                                            <strong>Bank Address</strong>
                                        </td>
                                        <td style="background-color:white;white-space:no-wrap;border:1px solid #DCDCDC !important;">
                                            <strong>G-1 Johar Town Lahore 435 G-1 Market, Johar Town Lahore</strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#ffffff;background-color:#40a4d5;border:1px solid #DCDCDC !important;">
                                            <strong>Account Title</strong>
                                        </td>
                                        <td style="background-color:white;white-space:no-wrap;border:1px solid #DCDCDC !important;">
                                            <strong>AETOS TECHNOLOGIES (PRIVATE) LIMITED</strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#ffffff;background-color:#40a4d5;border:1px solid #DCDCDC !important;">
                                            <strong>Account Number</strong>
                                        </td>
                                        <td style="background-color:white;white-space:no-wrap;border:1px solid #DCDCDC !important;">
                                            <strong>0010118728810012</strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#ffffff;background-color:#40a4d5;border:1px solid #DCDCDC !important;">
                                            <strong>IBAN Number</strong>
                                        </td>
                                        <td style="background-color:white;white-space:no-wrap;border:1px solid #DCDCDC !important;">
                                            <strong>PK61ABPA0010118728810012</strong>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td style="color:#ffffff;background-color:#40a4d5;border:1px solid #DCDCDC !important;">
                                            <strong>Account Type</strong>
                                        </td>
                                        <td style="background-color:white;white-space:no-wrap;border:1px solid #DCDCDC !important;">
                                            <strong>Current</strong>
                                        </td>
                                    </tr>
                                </table>
                            </t>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>