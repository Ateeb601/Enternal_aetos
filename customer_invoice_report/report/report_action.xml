<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="paperformat_customer_invoice_report" model="report.paperformat">
        <field name="name">Customized Paper Format</field>
        <field name="default" eval="True"/>
        <field name="format">custom</field>
        <field name="page_height">297</field>
        <field name="page_width">210</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">5</field>
        <field name="margin_bottom">10</field>
        <field name="margin_left">5</field>
        <field name="margin_right">5</field>
        <field name="header_line" eval="False"/>
        <field name="header_spacing">0</field>
        <field name="dpi">90</field>
    </record>

    <record id="customer_invoice_report_action" model="ir.actions.report">
        <field name="name">Customer Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">customer_invoice_report.customer_invoice_report</field>
        <field name="report_file">template.xml</field>
        <field name="paperformat_id" ref="paperformat_customer_invoice_report"/>
        <field name="print_report_name">'Customer Invoice - %s - %s' % (object.partner_id.name or '', object.name)</field>
        <field name="binding_model_id" eval="False"/>
        <field name="binding_type">report</field>
    </record>
</odoo>
