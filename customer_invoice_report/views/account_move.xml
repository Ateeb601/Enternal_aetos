<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="customer_invoice_report.view_move_form" model="ir.ui.view">
            <field name="name">customer_invoice_report view_move_form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <div class="oe_button_box" name="button_box">
                    <button name="open_customer_invoice_report" class="oe_stat_button" icon="fa-file-text"
                            string="Print Invoice"
                            type="object" invisible="state != 'posted' or move_type != 'out_invoice'"></button>
                </div>

                <xpath expr="//sheet/group" position="inside">
                    <group>
                        <field name="remarks" force_save="1" colspan="2"/>
                    </group>
                </xpath>

            </field>
        </record>
    </data>
</odoo>